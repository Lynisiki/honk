<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_column="7"
            android:layout_row="0"
            android:layout_toEndOf="@+id/news_type"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carpark_development"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:background="@android:color/holo_green_light"
                android:clickable="false"
                android:padding="8dp"
                android:text="Development"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carpark_availableLots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_development"
                android:text="Available Lots" />

            <TextView
                android:id="@+id/carpark_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_availableLots"
                android:text="Type" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>